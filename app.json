{
  "expo": {
    "name": "MiWill",
    "slug": "miwill-app",
    "version": "1.0.0",
    "orientation": "portrait",
    
    "userInterfaceStyle": "light",
    
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.miwill.app",
      "buildNumber": "1"
    },
    "android": {
      "package": "com.miwill.app",
      "versionCode": 1
    },
    
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to upload profile pictures and documents."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "The app accesses your camera to capture documents."
        }
      ]
    ],
    "scheme": "miwill",
    "extra": {
      "eas": {
        "projectId": "miwill-app-production"
      }
    }
  }
}

